<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
        fx:controller="com.example.sae.client.debug.DebugWindowController"
        spacing="5" style="-fx-background-color: rgba(0, 0, 0, 0.7); -fx-text-fill: white;" prefWidth="500">
    <padding>
        <Insets topRightBottomLeft="10"/>
    </padding>

    <Label text="Game Constants" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
    <VBox fx:id="constantsBox" spacing="2" style="-fx-text-fill: white;"/>

    <Label text="Entity Information" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
    <Label fx:id="foodCountLabel" style="-fx-text-fill: white;"/>
    <Label fx:id="enemyCountLabel" style="-fx-text-fill: white;"/>
    <Label fx:id="playerPositionLabel" style="-fx-text-fill: white;"/>
    <Label fx:id="playerMassLabel" style="-fx-text-fill: white;"/>

    <Label text="Debug Logs" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
    <ListView fx:id="logsListView" prefHeight="250" prefWidth="350" style="-fx-control-inner-background: rgba(0, 0, 0, 0.5); -fx-text-fill: white;"/>
</VBox>
