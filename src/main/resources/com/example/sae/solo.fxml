<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="rootStack" prefHeight="720" prefWidth="1280" stylesheets="@css/solo.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">

    <!-- The game world (moved by camera) -->
    <Pane fx:id="gameContainer" minHeight="100" minWidth="100" />

    <!-- The HUD : stay fixed on the screen -->
    <AnchorPane fx:id="hudContainer" pickOnBounds="false">

        <StackPane prefWidth="220" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <VBox spacing="5" styleClass="player-info-box">
                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <Label styleClass="player-info-label" text="Score:" />
                    <Label fx:id="scoreLabel" styleClass="player-info-value" text="0" />
                </HBox>
                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <Label styleClass="player-info-label" text="Position:" />
                    <Label fx:id="positionLabel" styleClass="player-info-value" text="(0, 0)" />
                </HBox>
            </VBox>
        </StackPane>


        <!-- Leaderboard at top left -->
        <ListView fx:id="leaderboard" focusTraversable="false" prefHeight="250" prefWidth="200" styleClass="styled-list" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0" />

        <!-- Chat at bottom left -->
        <VBox prefWidth="250" spacing="5" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0">
            <ListView fx:id="chatListView" prefHeight="200" styleClass="styled-list" />
            <HBox spacing="5">
                <TextField fx:id="chatInput" styleClass="chat-input" HBox.hgrow="ALWAYS" />
                <Button onAction="#sendMessage" styleClass="chat-button" text="Send" />
            </HBox>
        </VBox>

        <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <Canvas fx:id="minimap" height="250" styleClass="minimap-content" width="250" />
        </StackPane>

    </AnchorPane>
</StackPane>
